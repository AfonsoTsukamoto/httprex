{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist/types",
    "rootDir": "./src"
  },
  "include": [
    "src/lib-httprex/**/*",
    "src/web-components/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/__tests__/**/*",
    "src/chrome-extension/**/*",
    "src/pages/**/*",
    "node_modules"
  ]
}
