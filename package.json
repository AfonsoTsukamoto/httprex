{
  "name": "httprex",
  "private": true,
  "version": "0.1.0",
  "description": "HTTP request library for markdown - execute requests from code blocks like mermaid.js",
  "type": "module",
  "main": "./dist/lib/httprex.js",
  "module": "./dist/lib/httprex.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/httprex.mjs",
      "require": "./dist/lib/httprex.js",
      "types": "./dist/types/index.d.ts"
    },
    "./components": {
      "import": "./dist/lib/components.mjs",
      "types": "./dist/types/components/index.d.ts"
    },
    "./types": {
      "import": "./dist/lib/httprex.mjs",
      "types": "./dist/types/lib-httprex/types.d.ts"
    }
  },
  "files": [
    "dist/lib",
    "dist/types",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:app",
    "build:app": "tsc && vite build",
    "build:lib": "npm run build:lib:unminified && npm run build:lib:minified && npm run build:types",
    "build:lib:unminified": "vite build --config vite.lib.config.ts && vite build --config vite.lib.web-components.config.ts",
    "build:lib:minified": "vite build --config vite.lib.min.config.ts",
    "build:types": "tsc --project tsconfig.lib.json",
    "build:all": "npm run build:lib && npm run build:app",
    "preview": "vite preview",
    "test": "vitest --config vitest.config.ts",
    "test:e2e": "vitest run test/e2e/",
    "test:run": "vitest run --config vitest.config.ts",
    "coverage": "vitest run --coverage --config vitest.config.ts",
    "mock-server": "npx tsx test/e2e/server/index.ts",
    "prepublishOnly": "npm run test && npm run build:lib"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.217",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^18.14.0",
    "jsdom": "^24.0.0",
    "sass": "^1.60.0",
    "terser": "^5.44.1",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  }
}
