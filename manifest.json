{
  "manifest_version": 3,
  "name": "HttpRex",
  "description": "Interactive HTTP requests in Markdown - like mermaid.js for HTTP",
  "version": "2.0.0",
  "icons": {
    "16": "public/Log1.png",
    "32": "public/Log1@2x.png",
    "48": "public/Log1@3x.png"
  },
  "background": {
    "service_worker": "dist/chrome-extension/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.github.com/*",
        "https://*.gitlab.com/*"
      ],
      "js": ["dist/chrome-extension/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "public/Log1.png",
      "32": "public/Log1@2x.png",
      "48": "public/Log1@3x.png"
    },
    "default_title": "Toggle HttpRex"
  },
  "permissions": ["activeTab", "scripting"]
}
